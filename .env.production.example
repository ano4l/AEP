# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to version control

# Application
NODE_ENV=production
APP_VERSION=1.0.0

# Testing Mode - MUST be false in production
NEXT_PUBLIC_TESTING_MODE=false

# Supabase PostgreSQL Database
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/YOUR_DATABASE"
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/YOUR_DATABASE"

# Authentication Secrets
# Generate secure random strings (32+ bytes)
# Use: openssl rand -base64 32
AUTH_SECRET="GENERATE_SECURE_32_BYTE_SECRET_HERE"
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="GENERATE_ANOTHER_SECURE_SECRET_HERE"

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# Optional: External Services
# SENTRY_DSN="https://your-sentry-dsn"
# DATADOG_API_KEY="your-datadog-api-key"
# SMTP_HOST="smtp.your-provider.com"
# SMTP_PORT=587
# SMTP_USER="your-smtp-username"
# SMTP_PASSWORD="your-smtp-password"

# Optional: CDN Configuration
# CDN_URL="https://cdn.your-domain.com"

# Optional: Redis Cache (for session storage)
# REDIS_URL="redis://your-redis-host:6379"

# Security Notes:
# 1. Rotate all secrets before production deployment
# 2. Use environment-specific secrets (never reuse dev secrets)
# 3. Store secrets in secure vault (AWS Secrets Manager, etc.)
# 4. Enable HTTPS in production
# 5. Configure proper CORS settings
# 6. Set up monitoring and alerting
